#VRML V2.0 utf8
#
#Parede Fundo
# - Compõem as paredes que não possuem janelas na sala
#

#Parede Principal
Transform {
	translation 0 -.5 -5
	children[	
		Shape {
			appearance Appearance{
				material Material{ diffuseColor 1 .6823 0}
			}
			geometry Box{ size .2 2 5}
		}
	]
}

#Parede Secundaria
Transform {
	translation 0 -.5 1.2
	children[	
		Shape {
			appearance Appearance{
				material Material{ diffuseColor 1 .6823 0}
			}
			geometry Box{ size .2 2 4}
		}
	]
}


#Topo da Parede
Transform {
	translation 0 1 -2.15
	children[	
		Shape {
			appearance Appearance{
				material Material{ diffuseColor 1 .6823 0}
			}
			geometry Box{ size .2 1 10.7}
		}
	]
}